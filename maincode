
#include <Servo.h>

//create a servo object called servo1

//creating servo objects
Servo blHIP;
Servo brHIP;
Servo flHIP;
Servo frHIP;

Servo blKNEE;
Servo brKNEE;
Servo flKNEE;
Servo frKNEE;

Servo blANKLE;
Servo brANKLE;
Servo flANKLE;
Servo frANKLE;

void setup()
{
//servo port locations

  blHIP.attach(13);
  brHIP.attach(12);
  flHIP.attach(11);
  frHIP.attach(10);
  int blhHOME = 80;
  int brhHOME = 80;
  int flhHOME = 75;
  int frhHOME = 95;

  blKNEE.attach(9);
  brKNEE.attach(8);
  flKNEE.attach(7);
  frKNEE.attach(6);
  int blkHOME = 100;
  int brkHOME = 60;
  int flkHOME = 90;
  int frkHOME = 75;


  blANKLE.attach(5);
  brANKLE.attach(4);
  flANKLE.attach(3);
  frANKLE.attach(2);
  int blaHOME = 0;
  int braHOME = 180;
  int flaHOME = 0;
  int fraHOME = 140;

  blHIP.write(blhHOME);
  brHIP.write(brhHOME);
  flHIP.write(flhHOME);
  frHIP.write(frhHOME);

  //blKNEE.write(blkHOME);
  //brKNEE.write(brkHOME);
  // flKNEE.write(flkHOME);
  // frKNEE.write(frkHOME);
  // 15 is moderate, 40 too much, 30 for a high stand

  //STANDING POSITIONS
  blKNEE.write(blkHOME - 15);
  brKNEE.write(brkHOME + 15);
  flKNEE.write(flkHOME - 30);
  frKNEE.write(frkHOME + 30);


  //blANKLE.write(blaHOME);
  //brANKLE.write(braHOME);
  //flANKLE.write(flaHOME);
  //frANKLE.write(fraHOME);
  //50 degrees for high stand

  //STANDING POSITIONS
  blANKLE.write(blaHOME + 50);
  brANKLE.write(braHOME - 50);
  flANKLE.write(flaHOME + 50);
  frANKLE.write(fraHOME - 50);

  //WALKING V1
  /*delay(5000);
    for (;;) {
    blANKLE.write(blaHOME+65);
    brANKLE.write(braHOME-65);
    flANKLE.write(flaHOME+65);
    frANKLE.write(fraHOME-65);
    blKNEE.write(blkHOME-45);
    brKNEE.write(brkHOME+45);
    flKNEE.write(flkHOME-45);
    frKNEE.write(frkHOME+45);
    delay(500);
    blANKLE.write(blaHOME+50);
    brANKLE.write(braHOME-50);
    flANKLE.write(flaHOME+50);
    frANKLE.write(fraHOME-50);

    flKNEE.write(flkHOME-30);
    frKNEE.write(frkHOME+30);
    delay(500);
    }
  */
  
  delay(5000);
while(1) {
   blANKLE.write(blaHOME + 50);
    blKNEE.write(blkHOME - 15);
   frANKLE.write(fraHOME - 50);
    frKNEE.write(frkHOME + 30);
    brANKLE.write(braHOME - 65);
    brKNEE.write(brkHOME + 30);
    flANKLE.write(flaHOME + 65);
    flKNEE.write(flkHOME - 45);

    delay(450);
    blANKLE.write(blaHOME + 65);
    blKNEE.write(blkHOME - 30);
   frANKLE.write(fraHOME - 65);
    frKNEE.write(frkHOME + 45);
    brANKLE.write(braHOME - 50);
    brKNEE.write(brkHOME + 15); 
   flANKLE.write(flaHOME + 50);
    flKNEE.write(flkHOME - 30);
    delay(450);
    }
  /*
while(1) {
    blANKLE.write(blaHOME + 65);
    blKNEE.write(blkHOME - 30);
    frANKLE.write(fraHOME - 65);
    frKNEE.write(frkHOME + 45);
    brANKLE.write(braHOME - 50);
    brKNEE.write(brkHOME + 15);
    flANKLE.write(flaHOME + 50);
    flKNEE.write(flkHOME - 30);
    delay(500);
    blANKLE.write(blaHOME + 50);
    blKNEE.write(blkHOME - 15);
    frANKLE.write(fraHOME - 50);
    frKNEE.write(frkHOME + 30);
    brANKLE.write(braHOME - 65);
    brKNEE.write(brkHOME + 30);
    flANKLE.write(flaHOME + 65);
    flKNEE.write(flkHOME - 45);
    delay(500);
    }
  */
   
 
}


